    "class-variance-authority": "^0.6.1",
    "clsx": "^1.2.1",
    "env-cmd": "^10.1.0",
    "i18next": "^23.8.2",
    "lucide-react": "^0.330.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
